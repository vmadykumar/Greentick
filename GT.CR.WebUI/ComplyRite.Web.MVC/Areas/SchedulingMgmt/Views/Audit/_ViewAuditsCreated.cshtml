

@model IEnumerable<ComplyRite.Web.MVC.Areas.SchedulingMgmt.Models.AuditManagement.Audit2>
<style>
    .fit-input {
        width: 100%
    }
</style>
<div class="panel panel-primary" style="margin-top:0%;padding: 20px;">


    <div class="card" style="padding: 10px;">
        <div class="row">
            <div class="col s11">
                <h6 class="left-align">Audit List</h6>
            </div>
            <div class="col s1 right-align" style="padding: 0px;">
                <a class="tableFilterBtn btn btn-small waves-effect waves-green btn-flat filter-default" id="filterBtn">
                    <i class="material-icons left" style="margin:0px">filter_list</i>
                </a>
            </div>
        </div>

        <div id="activeChecks">
            <table>
                <thead>
                    <tr>
                        @*<th class="text-center"><input type="checkbox" name="selectAll" id="SelectAllCheckBox" class="regular-checkbox SelectAllCheckBox" value="@(Model.Count()+2)" /><label for="SelectAllCheckBox" class="SelectAllCheckBoxLabel"></label></th>*@
                        <th>Location <span class="fa fa-sort"></span></th>
                     
                        <th>Audit Title<span class="fa fa-sort"></span></th>
                        <th>#Checklist<span class="fa fa-sort"></span></th>
                        <th>Created By<span class="fa fa-sort"></span></th>
                        <th>Created On<span class="fa fa-sort"></span></th>
                        @*<th>Action</th>*@
                    </tr>
                    <tr class="filterRow" style="display:none">
                        @*<th></th>*@
                        <th><input type="text" class="text-uppercase fit-input" id="titleFilter" placeholder="Filter Location" /></th>
                        <th><input type="text" class="text-uppercase fit-input" id="titleFilter" placeholder="Filter Audit Title" /></th>
                        <th><input type="text" class="text-uppercase fit-input" id="titleFilter" placeholder="Filter #Checklist" /></th>
                        <th><input type="text" class="text-uppercase fit-input" id="titleFilter" placeholder="Filter Created By" /></th>
                        <th><input type="text" class="text-uppercase fit-input" id="titleFilter" placeholder="Filter Created On" /></th>
                        @*<th></th>*@
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 0;
                    }
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            @*<td align="center"><input type="checkbox" name="name" class="regular-checkbox individualCheck name" value="@count" id="checkbox-1-@count" /><label for="checkbox-1-@count"></label></td>*@
                            <td style="word-break:break-all">@item.Location</td>
                          
                            <td>@item.AuditTitle</td>
                            <td>@item.ChecklistCount</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.CreatedOn</td>
                            <td>
                              
                                <i class="material-icons dropdown-trigger" data-target='dropdown1'>more_vert</i>

                                <!-- Dropdown Structure -->
                                <ul id='dropdown1' class='dropdown-content'>
                                    <li><a href="@Url.Action("GetAuditDetailsByAuditId", "Audit", new RouteValueDictionary(new {  }), Request.Url.Scheme)"><i class="material-icons">arrow_forward</i>View</a></li>

                                    <li class="divider" tabindex="-1"></li>
                                    <li><a href="#!"><i class="material-icons">delete</i>Delete</a></li>
                                    <li><a href="#!"><i class="material-icons">content_copy</i>Duplicate</a></li>

                                </ul>
                            </td>


                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
<script src="~/Areas/SchedulingMgmt/Scripts/SavedAudits.js"></script>