                            </li>
                            <li>
                                @Html.ActionLink("Drafted Checks", "GetDraftedChecks", "CheckManagement", null, htmlAttributes: null)
                            </li>
                            <li>
                                @Html.ActionLink("Rejected Checks", "GetRejectedChecks", "CheckManagement", null, htmlAttributes: null)
                            </li>
                            <li>
                                @Html.ActionLink("Checks Approval Requests", "GetChecksApprovalRequests", "CheckManagement", null, htmlAttributes: null)
                            </li>
                        </ul>
                    </li>

                    <li>
                        @Html.ActionLink("Checklists", "GetListOfChecklists", "ChecklistManagement", routeValues: new { status = "Active" }, htmlAttributes: null)
                    </li>

